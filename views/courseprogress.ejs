<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Course Status</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="text-center">
    <%- include('header.ejs') %>
    <h2 class="font-semibold">Your Course Progress</h2>
    <%- include('notifications') %>
    <p>Completion Percentage: <%= completionPercentage.toFixed(2) %>%</p>

    <h1 class="font-semibold text-3xl">
        <%= course.name %>
    </h1>

    <% course.Chapters.forEach(chapter=> { %>
        <h3 class="font-semibold">
            <%= chapter.name %>
        </h3>
        <% chapter.Pages.forEach(page=> { %>
            <div>
                <span>
                    <%= page.title %>
                </span>
                <% if (page.Completions.length > 0) { %>
                    <span style="color: green;">Completed</span>
                <% } else { %>
                    <span style="color: red;">Not Completed</span>
                <% } %>
            </div>
        <% }); %>
    <% }); %>

    <p class="mt-2"><a href="javascript:void(0);" onclick="window.close();" class="bg-lime-300">Close Tab</a></p>

</body>

</html>
